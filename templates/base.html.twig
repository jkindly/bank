<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Free Bank{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/css?family=Lato:400,700&amp;subset=latin-ext" rel="stylesheet">             <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/main-responsive.css') }}">
    {% endblock %}
</head>
<body>
{% block topBar %}
    <div class="top-bar">
        <div class="top-content">
            <div class="logo">
                <img src="{{ asset('img/logo.png') }}" alt="">
            </div>
            <div class="user-avatar">
                <img src="{{ asset('img/avatar-male.png') }}" width="140px" height="140px" alt="">
            </div>
            <div class="user-menu">
                {% block userName %}
                    <div class="user-control user-name">
                        {{ app.user.firstName }} {{ app.user.lastName }}
                    </div>
                {% endblock %}
                <div class="user-control user-settings">
                    <i class="fas fa-cog"></i>
                    <a href="{{ path('app_user_settings') }}">Ustawienia</a>
                </div>
                <div class="user-control user-messages">
                    <i class="far fa-envelope"></i> Wiadomości
                </div>
                <div class="user-control user-logout">
                    <i class="fas fa-sign-out-alt"></i>
                    <a href="{{ path('app_logout') }}">Wyloguj</a>
                </div>
            </div>
            <nav class="navbar navbar-light navbar-expand-md navbar-position">
                {#<a class="navbar-brand" href="#">#}
                {#<img src="{{ asset('img/logo.png') }}" width="150px" height="65px" alt="">#}
                {#</a>#}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-nowrap">
                        <li class="nav-item nav-item-underscore">
                            <a class="nav-link" href={{ path('app_account') }}>Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ml-2" href={{ path('app_transfer') }}>Przelew</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link ml-2" href={{ path('app_transfer_history') }}>Historia</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="#">Zarządzaj</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        </div>
    </div>
{% endblock %}

<div class="container p-0">
    <div class="row">
        {% block body %}{% endblock %}
    </div>
</div>

{% block footer %}
    <div class="col-12 m-0 p-0 footer-position">
        <footer>
            HERE COMES FOOTER!
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="{{ asset('js/main.js') }}"></script>
{% endblock %}
</body>
</html>