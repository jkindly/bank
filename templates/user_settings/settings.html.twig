{% block title %}Ustawienia{% endblock %}

{% block body %}
    <main>
        <div class="user-settings-container">
            <section class="user-settings-options">
                <div class="user-settings-option settings-user-data-bar">
                    <i class="fas fa-user-edit"></i>
